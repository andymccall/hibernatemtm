<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost/mtm</property>
        <property name="connection.username">docker</property>
        <property name="connection.password">docker</property>

        <property name="dialect">org.hibernate.dialect.PostgreSQL93Dialect</property>

        <property name="show_sql">true</property>

        <property name="hbm2ddl.auto">create</property>

        <mapping class="com.autumncode.model.A"/>
        <mapping class="com.autumncode.model.B"/>
    </session-factory>
</hibernate-configuration>